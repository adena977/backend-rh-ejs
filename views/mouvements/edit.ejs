<div class="container mt-4">
    <h4>Modifier un mouvement RH</h4>

    <form action="/mouvements_rh/modifier/<%= mouvement.id %>" method="POST">
        <div class="mb-3">
            <label class="form-label required">Employé</label>
            <select name="employe_id" class="form-control" required>
                <% employes.forEach(e=> { %>
                    <option value="<%= e.id %>" <%=e.id===mouvement.employe_id ? 'selected' : '' %>><%= e.nom %>
                            <%= e.prenom %>
                    </option>
                    <% }) %>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label required">Date</label>
            <input type="date" name="date" value="<%= mouvement.date.toISOString().slice(0,10) %>" class="form-control"
                required>
        </div>

        <div class="mb-3">
            <label class="form-label required">Type</label>
            <input type="text" name="type" value="<%= mouvement.type %>" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control" rows="3"><%= mouvement.description %></textarea>
        </div>

        <button class="btn btn-primary">Mettre à jour</button>
        <a href="/mouvements_rh" class="btn btn-secondary">Annuler</a>
    </form>
</div>