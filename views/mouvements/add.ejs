<div class="container mt-4">
    <h4>Ajouter un mouvement RH</h4>

    <form action="/mouvements_rh/ajouter" method="POST">
        <div class="mb-3">
            <label class="form-label required">Employé</label>
            <select name="employe_id" class="form-control" required>
                <option value="">-- Sélectionner un employé --</option>
                <% employes.forEach(e=> { %>
                    <option value="<%= e.id %>">
                        <%= e.nom %>
                            <%= e.prenom %>
                    </option>
                    <% }) %>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label required">Date</label>
            <input type="date" name="date" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label required">Type</label>
            <input type="text" name="type" class="form-control" placeholder="Mutation, Promotion, etc." required>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control" rows="3"></textarea>
        </div>

        <button class="btn btn-success">Enregistrer</button>
        <a href="/mouvements_rh" class="btn btn-secondary">Annuler</a>
    </form>
</div>