<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="text-dark">Bienvenue, <%= employe.nom %>
                    <%= employe.prenom %>

            </h3>
            <p><strong>Poste :</strong>
                <%= employe.poste %> | <strong>Service :</strong>
                    <%= employe.service %>
            </p>
            <p><strong>Embauché depuis :</strong>
                <%= employe.date_embauche.toLocaleDateString() %>
            </p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Mes derniers congés</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <% conges.forEach(c=> { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <%= c.type %> (du <%= new Date(c.date_debut).toLocaleDateString() %> au <%= new
                                                Date(c.date_fin).toLocaleDateString() %>)
                                </span>
                                <span
                                    class="badge bg-<%= c.statut === 'Validé' ? 'success' : c.statut === 'Refusé' ? 'danger' : 'warning' %>">
                                    <%= c.statut %>
                                </span>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Annonces RH</h6>
                </div>
                <div class="card-body">
                    <% annonces.forEach(a=> { %>
                        <div class="alert alert-info" role="alert">
                            <strong>
                                <%= a.titre %>
                            </strong><br>
                            <small>
                                <%= a.description %> – <%= a.date %>
                            </small>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>