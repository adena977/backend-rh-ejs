<h4 class="mb-4">Modifier l’absence exceptionnelle</h4>

<form action="/absences/modifier/<%= absence.id %>" method="POST">
    <div class="mb-3">
        <label>Employé</label>
        <select name="employe_id" class="form-select" required>
            <% employes.forEach(e=> { %>
                <option value="<%= e.id %>" <%=e.id===absence.employe_id ? 'selected' : '' %>><%= e.nom %>
                        <%= e.prenom %>
                </option>
                <% }) %>
        </select>
    </div>
    <div class="mb-3">
        <label>Date début</label>
        <input type="date" name="date_debut" value="<%= absence.date_debut.toISOString().split('T')[0] %>"
            class="form-control" required>
    </div>
    <div class="mb-3">
        <label>Date fin</label>
        <input type="date" name="date_fin" value="<%= absence.date_fin.toISOString().split('T')[0] %>"
            class="form-control" required>
    </div>
    <div class="mb-3">
        <label>Motif</label>
        <textarea name="motif" class="form-control"><%= absence.motif %></textarea>
    </div>
    <div class="mb-3">
        <label>Statut</label>
        <select name="statut" class="form-select">
            <option value="en attente" <%=absence.statut==='en attente' ? 'selected' : '' %>>En attente</option>
            <option value="accepté" <%=absence.statut==='accepté' ? 'selected' : '' %>>Accepté</option>
            <option value="refusé" <%=absence.statut==='refusé' ? 'selected' : '' %>>Refusé</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Mettre à jour</button>
</form>