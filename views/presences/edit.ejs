

<div class="container mt-4">
  <h2>Modifier la présence</h2>

  <form action="/presences/modifier/<%= presence.id %>" method="POST">
    <div class="mb-3">
      <label for="employe_id" class="form-label">Employé</label>
      <select name="employe_id" class="form-select" required>
        <% employes.forEach(e => { %>
          <option value="<%= e.id %>" <%= e.id === presence.employe_id ? 'selected' : '' %>><%= e.nom %> <%= e.prenom %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" name="date" value="<%= presence.date.toISOString().split('T')[0] %>" required>
    </div>

    <div class="mb-3">
      <label for="statut" class="form-label">Statut</label>
      <select name="statut" class="form-select" required>
        <option value="présent" <%= presence.statut === 'présent' ? 'selected' : '' %>>Présent</option>
        <option value="absent" <%= presence.statut === 'absent' ? 'selected' : '' %>>Absent</option>
      </select>
    </div>

    <button type="submit" class="btn btn-success">Mettre à jour</button>
  </form>
</div>

<%- include('../partials/footer') %>
